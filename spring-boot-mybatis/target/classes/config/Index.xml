<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sinosoft.dao.IndexMapper">
<resultMap id="SysArea" type="com.sinosoft.normal.po.SysArea">
    <id column="AreaCode" jdbcType="VARCHAR" property="areaCode" />
    <result column="AreaCname" jdbcType="VARCHAR" property="areaCname" />
  </resultMap>
  <resultMap id="SysCode" type="com.sinosoft.normal.po.SysCode">
    <id column="CodeCode" jdbcType="VARCHAR" property="codeCode" />
    <result column="CodeCname" jdbcType="VARCHAR" property="codeCname" />
  </resultMap>
	 <!-- 默认查询出所属地区 -->
   <select id="selectByAreaCode"  parameterType="string" resultMap="SysArea">
	   SELECT  distinct AreaCode,AreaCname FROM sysarea WHERE SupAreaCode=#{supareacode} group by AreaCode
   </select>
    <!-- 默认查询出联调选择 -->
   <select id="selectByMsg"  resultMap="SysCode">  
		select CodeCode,CodeCname from SysCode WHERE codeType='InfoQueryType'
   </select>
</mapper>